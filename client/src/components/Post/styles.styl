.post
  width 70%
  margin 14px 8px
  font-family sohne, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight normal
  color rgba(39, 39, 39, 1)
  border 1px solid rgba(0, 0, 0, 0.1)
  box-sizing border-box

.post-content
  height 160px
  padding 10px
  position relative

.post-content-left,
.post-content-right
  display inline-block
  box-sizing border-box

.post-content-left
  width 70%
  height: 100%;

.post-content-right
  width 20%
  height 96%
  position absolute
  top 0
  right 0

.post-content-left__author
  font-size 12px
  position absolute
  top 0
  box-sizing border-box

.post-content-left__main
  margin-top 10px
  padding 10px 0

.post-content-left__main-title
  margin-bottom 12px
  font-size 20px

.post-content-left__main-subtitle
  margin-bottom 8px
  font-size 14px

.post-content-left__main-content
  position relative
  height 44px
  line-height 20px
  overflow hidden

.post-content-left__date
  font-size 12px

.post-content-right__image
  width 100%
  height 96%
  margin auto
  position absolute
  bottom 0
  right 0
  background-size cover